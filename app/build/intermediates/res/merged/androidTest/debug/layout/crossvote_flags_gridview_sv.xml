<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="122dp"
    android:layout_height="132dp"
    android:id="@+id/card_view"
    android:padding="0dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="#FAFAFA"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="0dp" >
    <!--android:layout_height="100dp" elSalvador-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dp"
        android:paddingLeft="0dp"
        android:paddingBottom="0dp"
        android:paddingRight="0dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:id="@+id/item_image"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:id="@+id/item_cv"
            android:layout_below="@+id/item_image"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="0dp"
            android:paddingBottom="0dp"
            android:includeFontPadding="false"
            android:text = "0"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:id="@+id/item_title"
            android:layout_below="@+id/item_image"
            android:layout_toRightOf="@+id/item_cv"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="0dp"
            android:paddingBottom="0dp"
            android:includeFontPadding="false"
            android:text = "0"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/black"/>
        <FrameLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/mismatch_icon">

            <ImageView
                android:id="@+id/warning_triangle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/yellow_triangle"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mismatch_value"
                android:paddingTop="14dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12sp"/>
        </FrameLayout>




    </RelativeLayout>

</android.support.v7.widget.CardView>