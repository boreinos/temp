<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.afilon.mayor.v11.activities.DirectVoteCounter">

    <TextView
        android:id="@+id/vote_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vote_center"
        android:padding="20dp"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp" >

            <TextView
                android:id="@+id/textView11"

                android:text="@string/parlacen"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:gravity="right"
                android:text="@string/JRVc"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView13"
                android:text=""
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView15"
                android:gravity="right"
                android:paddingRight="250dp"
                android:text="Marcas            Votos"
                android:textColor="@color/blue"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp" >

            <TextView android:id="@+id/textView21" />

            <TextView
                android:id="@+id/textView23"
                android:layout_span="3"
                android:gravity="center"
                android:textStyle="bold"
                android:text=" " />

            <TextView
                android:id="@+id/textView25"
                android:text="" />
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/view01"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@id/tableLayout1"
        android:background="#FF0000" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view01"
        android:background="@drawable/custom_list_shape"
        android:cacheColorHint="#0000"
        android:clipToPadding="true"
        android:dividerHeight="1px"
        android:scrollbars="none"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp"
        android:soundEffectsEnabled="true" />

</RelativeLayout>
