<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LastActivity" >

    <LinearLayout
        android:id="@+id/linearLayout001"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:src="@drawable/escudo"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textview_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/afion_name"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tse_elections" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:src="@drawable/tribunal_supremo_electoral" />
    </LinearLayout>

    <View
        android:id="@+id/lineView1"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@id/linearLayout001"
        android:layout_marginBottom="10dp"
        android:background="#FF0000" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lineView1"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/jrv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text=""
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/enviar_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/buttonsTextSize"
            android:layout_margin="2dp"
            android:text="@string/enviar" />
        
         <Button
            android:id="@+id/enviar_image_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/buttonsTextSize"
            android:layout_margin="2dp"
            android:text="@string/enviar_image" />

        <TextView
            android:id="@+id/imageconfirmation_textView"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="25dp"
            android:text="@string/confirmacion"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/enlacedeweb_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="@dimen/buttonsTextSize"
            android:text="@string/enlace_de_web" />

        <Button
            android:id="@+id/cerrar_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:visibility="gone"
            android:textSize="@dimen/buttonsTextSize"
            android:text="@string/cerrar" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/transparent"
        android:layout_below="@id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:indeterminateDrawable="@drawable/my_progress_indeterminate" />

</RelativeLayout>