<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:id="@+id/holderView"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
 />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/transparent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/candidateNameSize"
                android:id="@+id/candidateName"
                android:background="@color/transparent"
                android:paddingLeft="25dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginLeft="2dp"
                android:layout_alignParentLeft="true"
                android:background="@color/transparent"
                android:id="@+id/candidateRank" />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:paddingLeft="25dp"
            android:orientation="horizontal">
            <!-- Votes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:paddingBottom="@dimen/separationPad"
                android:background="@color/transparent"
                android:id="@+id/votesLabel" />
            <!-- Votes Values -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingBottom="@dimen/separationPad"
                android:paddingLeft="@dimen/separationPad"
                android:textColor="@color/DarkBlue"
                android:background="@color/transparent"
                android:id="@+id/candidateVotes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:paddingLeft="25dp"
            android:orientation="horizontal">
            <!-- Votes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:paddingBottom="@dimen/separationPad"
                android:background="@color/transparent"
                android:id="@+id/marksLabel" />
            <!-- Votes Values -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingBottom="@dimen/separationPad"
                android:paddingLeft="@dimen/separationPad"
                android:textColor="@color/DarkBlue"
                android:background="@color/transparent"
                android:id="@+id/candidateMarks" />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

