<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:padding="2dp" >

    <LinearLayout
        android:id="@+id/linear_layout_cbsb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal"
        android:padding="2dip" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/item_check_one_b"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:button="@drawable/btn_checkbox_selector"
                android:clickable="true" />

            <ImageView
                android:id="@+id/errorChkOne"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="13dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:visibility="gone"
                android:src="@drawable/error"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
            android:id="@+id/item_check_two_b"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:button="@drawable/btn_checkbox_selector"
            android:clickable="true" />

            <ImageView
                android:id="@+id/errorChkTwo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="13dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:visibility="gone"
                android:src="@drawable/error"/>

        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/image_icon_b"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/candidatepicture"
        android:src="@drawable/fmln" />

    <LinearLayout
        android:id="@+id/linear_layout_txts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:padding="2dip" >

        <TextView
            android:id="@+id/txt_name_b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:textColor="@color/DarkBlue"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txt_candidate_nmb_b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:textColor="@color/DarkRed"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_selections_marks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="75dp"
        android:text="0"
        android:textColor="@color/DarkBlue"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txt_selections_nmb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:text="0.000"
        android:textColor="@color/DarkBlue"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txt_votes_previous"
        android:layout_width="105dp"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:padding="1dp"
        android:gravity="right"
        android:text="0.000"
        android:textColor="@color/DarkBlue"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txt_votes_two"
        android:layout_width="105dp"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:text="0.000"
        android:textColor="@color/DarkBlue"
        android:textSize="25sp" />

</TableRow>