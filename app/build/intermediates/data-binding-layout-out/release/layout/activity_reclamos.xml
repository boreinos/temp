<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReclamosActivity" >

    <TextView
        android:id="@+id/vote_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vote_center"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp" >

            <TextView android:id="@+id/textView11" />

            <TextView
                android:id="@+id/textView12"
                android:layout_marginLeft="20dp"
                android:text="Municipio:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView13"
                android:text="" />

            <TextView
                android:id="@+id/textView14"
                android:text="Departamento:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView15"
                android:text="" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp" >

            <TextView android:id="@+id/textView21" />

            <TextView
                android:id="@+id/textView22"
                android:layout_marginLeft="20dp"
                android:text="Codigo de Barra:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView23"
                android:text="" />

            <TextView
                android:id="@+id/textView24"
                android:text="@string/receptora"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView25"
                android:text="" />
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/view01"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@id/tableLayout1"
        android:background="#FF0000" />

    <LinearLayout
        android:id="@+id/layout_rightBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view01"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textboxleft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="OBSERVACIONES Y RECLAMOS"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/reclamos_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:gravity="start"
            android:lines="12"
            android:singleLine="false" />
    </LinearLayout>

    <Button
        android:id="@+id/aceptar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:text="GUARDAR" />

</RelativeLayout>